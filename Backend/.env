# Server Configuration
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem
FRONTEND_URL=http://localhost:3000
JWT_SECRET=your_jwt_secret_key
MONGO_URI=mongodb://localhost:27017/telemedicine
PORT=8080  # Default port, override if needed

# Blockchain Configuration
SONIC_RPC_URL=https://rpc.sonic.network
PRIVATE_KEY=your_wallet_private_key
CONTRACT_ADDRESS=0xYourContractAddress
PAYMASTER_ADDRESS=0xYourPaymasterAddress
ENTRYPOINT_ADDRESS=0x5FF137D4b0FDCD49DcA30c7CF57E578a026d2789

# IPFS Configuration
IPFS_HOST=ipfs.infura.io
IPFS_PORT=5001
IPFS_PROTOCOL=https
INFURA_PROJECT_ID=your_infura_project_id  # For authenticated IPFS access
INFURA_PROJECT_SECRET=your_infura_project_secret

# Logging and Monitoring
LOG_LEVEL=info  # debug, info, warn, error
SENTRY_DSN=your_sentry_dsn  # For error tracking (optional)

# Security
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com  # For CORS
RATE_LIMIT_MAX=100  # Max requests per window (optional with rate-limiter)
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes (optional with rate-limiter)

# Performance
MAX_CONCURRENT_USEROPS=10  # Limit concurrent UserOp submissions
